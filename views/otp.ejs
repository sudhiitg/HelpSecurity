<!DOCTYPE html>
<html>

<head>
  <title>OTP Verification</title>
  <link rel="stylesheet" type="text/css" href="otp.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
  <div class="container d-flex justify-content-center align-items-center">
    <div class="card text-center">
      <div class="card-header p-5">
        <img src="mobile.png">
        <h5 class="mb-2">OTP VERIFICATION</h5>
        <div>
          <small>code has been sent to <%=context%></small>
        </div>
      </div>
      <form action="/otp" method="post">
        <div class="input-container d-flex flex-row justify-content-center mt-2">
          <input type="text" class="m-1 text-center form-control rounded" maxlength="1" name="otp" id="otp1" >
          <input type="text" class="m-1 text-center form-control rounded" maxlength="1" name="otp" id="otp2" >
          <input type="text" class="m-1 text-center form-control rounded" maxlength="1" name="otp" id="otp3" >
          <input type="text" class="m-1 text-center form-control rounded" maxlength="1" name="otp" id="otp4" >
        </div>

        <div class="mt-3 mb-5">
          <button class="btn btn-success px-4 verify-btn">verify</button>
        </div>
      </form>
      <form action="/resend" method="post">
        <div id="submit-otp">
          <small style="font-weight: bold;">
            Didn't get the otp
            <button type="submit"  class="btn btn-outline-dark btn-sm rounded-pill">Resend</button>
            <!-- <button type="submit" style="margin-left: 10px;">Resend</button> -->
          </small>
        </div>
      </form>
    </div>
  </div>
</body>
  <script>
    document.getElementById("otp1").focus();
    document.getElementById("otp1").addEventListener("keyup",function(e){
      if(e.key>='0' && e.key<='9'){
        document.getElementById("otp2").focus();
      }
    })
    document.getElementById("otp2").addEventListener("keyup",function(e){
      if(e.key>="0" && e.key<="9"){
        document.getElementById("otp3").focus();
      }
      if(e.key=="Backspace"){
        document.getElementById("otp1").focus();
      }
    })
    document.getElementById("otp3").addEventListener("keyup",function(e){
      if(e.key>="0" && e.key<="9"){
        document.getElementById("otp4").focus();
      }
      if(e.key=="Backspace"){
        document.getElementById("otp2").focus();
      }
    })
    document.getElementById("otp4").addEventListener("keyup",function(e){
      if(e.key=="Backspace"){
        document.getElementById("otp3").focus();
      }
    })
  </script>
</html>